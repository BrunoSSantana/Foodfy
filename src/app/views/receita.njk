{% extends "layout.njk" %}

{% block head %}
    <title>{{recipe.title}}</title>
{% endblock %}

{% block content %}

    <div class="banner">
        <img src="{{recipe.image}}" alt="{{recipe.title}}">
        <h4 class="nome-do-prato" >{{recipe.title}}</h4>
        <p class="chef">por {{recipe.author}}</p>
        <div class="description">

            <div class="partial">
                <div class="head">
                    <h5>Ingredientes</h5><span id="ingredientes" class="button">ocultar</span>
                </div>

                <div id="ingredientes">
                    <ul>
                    {% for item in recipe.ingredients %}
                        <li>{{item}}</li>
                    {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="partial">
                <div class="head">
                    <h5>Modo de preparo</h5><span id="mod" class="button">ocultar</span>
                </div>

                <div id="mod"><p>{{recipe.preparation}}</p></div>
            </div>

            <div class="partial">
                <div class="head">
                    <h5>Informações Adicinais</h5><span id="infos" class="button">ocultar</span>
                </div>

                <div id="infos"><p>{{recipe.information}}</p></div>
            </div>

        </div>
    </div>
{% endblock %}
