{% extends "admin/recipes/layout.njk" %}

{% block headAdmin %}
    <title>Listing</title>
{% endblock %}

{% block contentAdmin %}
<div class="manager">
    <h2>Gerenciar receitas</h2> 
</div>
<div class="listing">

{% for recipe in recipes %}
    <div class="recipe">
        <img src="{{recipe.image}}" alt="">
        <div>
            <h3>{{recipe.title}}</h3>
            <p>por {{recipe.author}}</p>
            <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
        </div>
    </div>
{% endfor %}

</div>

{% endblock %}