{% extends "admin/recipes/layout.njk" %}

{% block headAdmin %}
    <title>Details</title>
{% endblock %}

{% block contentAdmin %}
<div class="banner details">
    <div>
        <h5>Receita: Bolo de Chocolate</h5>
        <button><a href="/admin/recipes/{{recipe.id}}/edit">Editar</a></button>

    </div>
    <img src="{{recipe.image}}" alt="{{recipe.title}}">
    <h4 class="nome-do-prato" >{{recipe.title}}</h4>
    <p class="chef">por Bruno Santana</p>
    
    <div class="description">

        <div class="partial">
            <div class="head">
                <h5>Ingredientes</h5>
            </div>

            <div id="ingredientes">
                <ul>
                {% for item in recipe.ingredients %}
                    <li>{{item}}</li>
                {% endfor %}
                </ul>
            </div>
        </div>

        <div class="partial">
            <div class="head">
                <h5>Modo de preparo</h5>
            </div>

            <a id="mod"><p>{{recipe.preparation}}</p></a>
        </div>

        <div class="partial">
            <div class="head">
                <h5>Informações Adicinais</h5>
            </div>

            <a id="infos"><p>{{recipe.information}}</p></a>
        </div>

    </div>
    </div>
{% endblock contentAdmin %}